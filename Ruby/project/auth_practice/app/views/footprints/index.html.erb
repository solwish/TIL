<p id="notice"><%= notice %></p>

<h1>Listing Footprints</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @footprints.each do |footprint| %>
      <tr>
        <td><%= footprint.title %></td>
        <td><%= footprint.content %></td>
        <td><%= footprint.user.email %></td>
        <td><%= link_to 'Show', footprint %></td>
          <td><%= link_to 'Edit', edit_footprint_path(footprint) if can? :edit, footprint %></td>
        <td><%= link_to 'Destroy', footprint, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, footprint %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Footprint', new_footprint_path %>
