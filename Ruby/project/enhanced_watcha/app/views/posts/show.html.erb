<div class="container">
  <div class="row">
    <div class="card">

      <p>
        <strong>Title:</strong>
        <%= @post.title %>
      </p>

      <p>
        <strong>Content:</strong>
        <%= @post.content %>
      </p>

      <p>
        <strong>User:</strong>
        <%= @post.user.nickname %>
      </p>

      <p>
        <strong>Image:</strong>
        <img src="<%= @post.image.small %>">
      </p>


      <p>
      <%= link_to 'Edit', edit_post_path(@post) %> |
      <%= link_to 'Back', posts_path %>
      </p>

      <%= form_tag("/posts/#{@post.id}/comment", method: :post) do %>
        댓글 : <%= text_field_tag :content %>
        <%= submit_tag "댓글달기" %>
      <% end %>

      <% @post.comments.reverse.each do |comment| %>
        <p>
          댓글 : <%= comment.content %>
          <div class="flex-container">
            작성자 : <%= comment.user.nickname %>
          </div>
        </p>
      <% end %>
    </div>
  </div>
</div>
