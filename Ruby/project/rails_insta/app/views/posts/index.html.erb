<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col" width="800px">제목</th>
      <th scope="col">글쓴이</th>
      <th scope="col">작성일</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <th scope="row"><%= post.id %></th>
      <td><%= link_to "#{post.title}", "/posts/show/#{post.id}" %></td>
      <td><%= post.user.email %></td>
      <td><%= time_ago_in_words(post.created_at) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
