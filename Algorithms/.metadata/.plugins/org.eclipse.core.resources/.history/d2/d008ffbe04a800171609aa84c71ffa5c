
public class PracticeSort {

	public static void main(String[] args) {

	}

	void mergeSort(int A[], int p, int r) {
		int q;
		if (p < r) {
			q = (p + r) / 2;
			mergeSort(A, p, q);
			mergeSort(A, q + 1, r);
			merge(A, p, q, r);
		}
	}

	void merge(int A[], int p, int q, int r) {
		int i = p, j = q + 1, k = p;
		int[] temp = new int[A.length];

		while (i <= q && j <= r) {
			if (A[i] <= A[j])
				temp[k++] = A[i++];
			else
				temp[k++] = A[j++];
		}

		while (i <= q)
			temp[k++] = A[i++];
		while (j <= r)
			temp[k++] = A[i++];
	}

}
