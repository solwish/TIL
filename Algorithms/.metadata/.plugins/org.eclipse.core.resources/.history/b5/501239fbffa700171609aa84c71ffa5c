
public class QuickSort {

	public static void main(String[] args) {

	}

	void quickSort(int A[], int p, int r) {
		if (p < r) {
			int q = partition(A, p, r);
			quickSort(A, p, q - 1);
			quickSort(A, q + 1, r);
		}
	}

	int partition(int A[], int p, int r) {
		int pivot;
		int temp;
		pivot = A[r];
		int i = p - 1;
		for (int j = p; j <= r - 1; j++) {
			if (A[j] <= pivot) {
				i = i + 1;
				temp = A[i];
				A[i] = A[j];
				A[j] = temp;
			}
		}
		temp = A[r];
		A[r] = A[i + 1];
		A[i + 1] = temp;

		return i + 1;
	}
}
