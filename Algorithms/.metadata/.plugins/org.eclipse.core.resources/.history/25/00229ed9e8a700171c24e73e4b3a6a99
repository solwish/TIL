
public class MergeSort {

	public static void main(String[] args) {

	}

	void mergeSort(int A[], int p, int r) {
		int q;
		if (p < r) {
			q = (p + r) / 2;
			mergeSort(A, p, q);
			mergeSort(A, q + 1, r);
			merge(A, p, q, r);
		}
	}

	void merge(int data[], int p, int q, int r) {
		int i = p, j = q + 1, k = p;
		int[] tmp = new int[data.length];

		while (i <= q && j <= r) {
			if (data[i] <= data[j])
				tmp[k++] = data[i++];
			else
				tmp[k++] = data[j++];
		}

		while (i <= q)
			tmp[k++] = data[i++];
		while (j <= r)
			tmp[k++] = data[j++];
		for (i = p; i <= r; i++)
			data[i] = tmp[i];
	}
}
