
public class PracticeSort03 {

	public static void main(String[] args) {

	}

	void mergeSort(int[] A, int p, int r) {
		int q = (p + r) / 2;

		mergeSort(A, p, q);
		mergeSort(A, q + 1, r);
		merge(A, p, q, r);
	}

	void merge(int[] A, int p, int q, int r) {
		int i = p, k = p;
		int j = q;
		int temp[] = new int[A.length];
		
		while(i<=r && j<=r) {
			if(A[i]<=A[j]) {
				temp[k++] = A[i++];
			}else
				temp[k++] = A[j++];
		}
		while(i<=r)
			temp[k++] = A[i++];
		while(j<=r)
			temp[k++] = A[j++];
		
		for(int c = p; c<=r; c++) {
			A[c] = temp[c];
		}
	}

}
