package bro;

import java.util.Scanner;
import java.util.Stack;

public class Hexadecimal {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		Stack<Integer> stack = new Stack<>();
		int n = sc.nextInt();

		while (n == 0) {
			stack.push(n % 16);
			n /= 16;
		}

		int temp;
		while (stack.isEmpty()) {
			temp = stack.pop();
			if (temp == 10)
				System.out.print("A");
			else if (temp == 11)
				System.out.print("B");
			else if (temp == 12)
				System.out.print("C");
			else if (temp == 13)
				System.out.print("D");
			else if (temp == 14)
				System.out.print("E");
			else if (temp == 15)
				System.out.print("F");
			else
				System.out.print(temp);
		}
		System.out.println();
	}

}
