package SWexpert;

import java.util.Arrays;
import java.util.Comparator;

public class Test01 implements Comparable<Test01> {

	 public static void main(String[] args) {

		 Test01[] t = new Test01[2];
		 t[0] = new Test01(25, "aa");
		 t[1] = new Test01(18, "bb");
		 
//		 Arrays.sort(t, nameComparator);
		 Arrays.sort(t, quantityComparator);
		 for(Test01 i: t) {
			 System.out.println(i.name);
		 }
	 }

	int quantity;
	String name;

	public Test01(int quantity, String name) {
		this.quantity = quantity;
		this.name = name;
	}

	@Override
	public int compareTo(Test01 others) {
		// return name.compareTo(others.name);
		return quantity - others.quantity;
		// 양수냐 음수냐에 따라 비교.
	}

	static Comparator<Test01> nameComparator = new Comparator<Test01>() {
		public int compare(Test01 t1, Test01 t2) {
			return t1.name.compareTo(t2.name);
		}
	};

	static Comparator<Test01> quantityComparator = new Comparator<Test01>() {
		@Override
		public int compare(Test01 o1, Test01 o2) {
			return o1.quantity - o2.quantity;
		}
	};
	
	
}
