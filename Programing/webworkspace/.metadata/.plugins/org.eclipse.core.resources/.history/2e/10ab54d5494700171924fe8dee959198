<script>
window.onload = function () {
	// 문서 객체를 선택합니다.
	var header = document.getElementById('header');
	// 문서 객체를 조작합니다.
	header.style.color = 'orange';
	header.style.background = 'red';
	header.innerHTML = '<h2><i>From JavaScript</i><h2>';
};
